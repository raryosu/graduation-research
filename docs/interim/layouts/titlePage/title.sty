		\let\footnotesize\small
		\let\footnoterule\relax
		\parindent \z@
		\reset@font
		\null\vfil
		\begin{flushleft}
      {\bf \huge \@title}
		\end{flushleft}
		\par
		\hrule height 4pt
		\par
		\begin{flushright}
      {\bf \Large \@author \par}
		\end{flushright}
		\vskip 60\p@
		\vfil\null
		\begin{flushright}
			{\@date}%
		\end{flushright}
	\end{titlepage}%
	\setcounter{footnote}{0}%
}
